<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <net.luminis.jfall2012.user.ClockTextField
        android:id="@+id/clockTextField1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="ClockTextField" />

    <net.luminis.jfall2012.user.DSTButton
        android:id="@+id/dSTButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clockTextField1"
        android:layout_centerHorizontal="true"
        android:text="DSTButton" />

</RelativeLayout>
